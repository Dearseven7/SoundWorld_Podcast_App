<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/BarColor" />
        </shape>
    </item>

    <item
        android:bottom="-120dp"
        android:end="-40dp"
        android:gravity="bottom"
        android:start="-40dp">
        <shape
            android:shape="oval"
            android:useLevel="true">
            <solid android:color="@color/ThemeColor" />
            <!-- 修改height会改变圆弧的弧度 -->
            <size android:height="200dp" />
        </shape>
    </item>

</layer-list>
